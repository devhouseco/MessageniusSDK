<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MessageniusSample.Views.InitilizePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <ContentPage.Content>

        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Padding="16,0">

            <Entry Placeholder="Application Id" Text="{Binding ApplicationId,Mode=TwoWay}" />
            <Entry Placeholder="Server" Text="{Binding Server,Mode=TwoWay}" />
            <Entry Placeholder="WindowsKey" Text="{Binding WindowsKey,Mode=TwoWay}" />
            <Button Text="Init" BackgroundColor="{StaticResource primaryColor}" TextColor="White" Command="{Binding InitTappedCommand}" />

        </StackLayout>

    </ContentPage.Content>

</ContentPage>
